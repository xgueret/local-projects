# Auto detect text files and perform LF normalization
* text=auto

# Ansible files
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Python
*.py text eol=lf

# Terraform
*.tf text eol=lf
*.tfvars text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Jinja2 templates
*.j2 text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
