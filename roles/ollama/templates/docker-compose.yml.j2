services:
  ollama:
    image: {{ ollama_image }}
    container_name: {{ ollama_container_name }}
    restart: unless-stopped
    ports:
      - "{{ ollama_port }}:11434"
    volumes:
      - ollama_data:/root/.ollama
    environment:
{% if ollama_use_gpu %}
      - NVIDIA_VISIBLE_DEVICES=all
{% endif %}
      - OLLAMA_NEW_ESTIMATES=1  # ðŸ†• Nouvelle gestion mÃ©moire v0.12.0
      - OLLAMA_KEEP_ALIVE={{ ollama_keep_alive | default('5m') }}
{% if ollama_use_gpu %}
{% if ollama_gpu_syntax | default('modern') == 'modern' %}
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: {{ ollama_gpu_count | default('all') }}
              capabilities: [gpu]
{% else %}
    runtime: nvidia
{% endif %}
{% endif %}
    networks:
      - {{ ollama_network_name }}

volumes:
  ollama_data:

networks:
  {{ ollama_network_name }}:
    external: true
