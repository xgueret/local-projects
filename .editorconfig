root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.py]
indent_size = 4

[*.tf]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
